<div class="container">
<%= form_for @post do |f|%>
  <% if @post.errors.any? %>
 <p><%= pluralize(@post.errors.count,'error') %> prohibited to save post record</p>
    <% @post.errors.full_messages.each do |error| %>
    <p><%= error%></p>
    <%end%>
    <%end%>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, :class=>"form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :images %>
      <%= f.file_field :images, :multiple => true %>
    </div>
    <%= f.submit%>
  <%end%>
 </div>