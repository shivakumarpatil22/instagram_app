<h1>My Posts</h1>
<div class="container">           
  <table class="table">
    <thead>
      <tr>
        <th>Post Description</th>
        <th>Post Images</th>
      </tr>
    </thead>
    <tbody>
     <% @posts.each do |post| %>
      <tr>
        <td><%= post.description %></td>
        <% if post.images.present? %>
        <td><%= image_tag post.images&.first, :size => '260x180' %></td>
        <% else %>
        <td> No Image Present </td>
        <% end %>
        <% if user_signed_in? %>


        <td><%= link_to 'show', post_path(post.id), class: "btn btn-primary" %></td>
        <td><%= link_to 'edit', edit_post_path(post.id), class: "btn btn-primary" %></td>
        <td><%= link_to 'destroy', post, method: :delete, data:{confirm: 'Are you Sure'}, class: "btn btn-primary" %>
          
        </td>
        <% end %>
      </tr>

      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New post', new_post_path, class: "btn btn-primary" %>